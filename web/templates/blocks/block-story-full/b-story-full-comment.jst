<li class="b-s-f-c-listitem<% if (counter > 2) { %> hidden<% } %>" data-commentid="<%= id %>">
    <% if (user.photo) { %><a href="<%= user.profile %>" class="b-s-f-c-userpicwrap"><img class="b-s-f-c-userpic" src="<%= user.photo %>" alt="<%= user.fullname %>"></a><% } %>
    <div class="b-s-f-c-content">
        <p class="b-s-f-c-meta"><a href="<%= user.profile %>" class="b-s-f-c-link-profile"><%= user.fullname %></a> <%= S.utils.formatDate(create_date) %></p>
        <p class="b-s-f-c-message"><%= message %></p>
    </div>
</li>
